<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    
  <% if params[:plan] == '3' %>
    <h1>Go Pro</h1>
    <p>Sign up to get 60 days for free then pay only $5/month. No contract. Cancel anytime.</p>
  <% else %>
      <h1>Basic Account</h1>
    <p>Sign up for free and get basic access to the community.</p>
  <% end %>
  
  </div>
  
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
      <% if params[:plan] == '3' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
